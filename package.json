{
  "name": "mich-h",
  "version": "0.3.1",
  "description": "Create HAST-compliant virtual trees of HTML using [hyperscript][] compatible syntax, just in ~550 bytes.",
  "repository": "tunnckoCore/mich-h",
  "author": "Charlike Mike Reagent <@tunnckoCore> (https://i.am.charlike.online)",
  "precommit.silent": true,
  "jsnext:main": "dist/mich-h.es.js",
  "module": "dist/mich-h.es.js",
  "main": "dist/mich-h.common.js",
  "license": "MIT",
  "scripts": {
    "lint": "eslint src/ test.js --fix",
    "test": "npm-run-all -s lint test:*",
    "test:api": "nyc --reporter lcov node test.js",
    "test:report": "nyc report",
    "prerelease": "npm test",
    "release": "standard-version --sign --no-verify",
    "git": "npm-run-all -s git:*",
    "git:add": "git add --all",
    "git:cz": "git-cz",
    "commit": "npm-run-all -s test build git",
    "build": "npm-run-all -s build:*",
    "build:clean": "rimraf dist",
    "build:browser": "rollup -c --environment BROWSER",
    "build:node": "rollup -c --environment NODE",
    "build:show": "ls -al dist"
  },
  "dependencies": {
    "mich-parse-selector": "^1.0.2"
  },
  "devDependencies": {
    "commitizen": "^2.9.2",
    "cz-conventional-changelog": "^1.2.0",
    "eslint": "^3.15.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.4.2",
    "eslint-plugin-standard": "^2.0.1",
    "mukla": "^0.4.8",
    "npm-run-all": "^4.0.1",
    "nyc": "^10.0.0",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.5.4",
    "rollup": "^0.41.4",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^7.0.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-uglify": "^1.0.1",
    "rollup-plugin-zopfli": "^1.0.2",
    "standard-version": "^4.0.0"
  },
  "files": [
    "dist/"
  ],
  "keywords": [],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=4",
    "npm": ">=2"
  },
  "eslintConfig": {
    "extends": "standard"
  },
  "nyc": {
    "check-coverage": true,
    "statements": 0,
    "functions": 0,
    "branches": 0,
    "lines": 0
  },
  "verb": {
    "run": true,
    "toc": true,
    "layout": "empty",
    "tasks": [
      "readme"
    ],
    "related": {
      "list": [
        "hyperscript",
        "hastscript",
        "virtual-dom",
        "mich-parse-selector",
        "virtual-html",
        "rehype",
        "reshape",
        "posthtml"
      ],
      "highlight": "hyperscript"
    },
    "reflinks": [
      "always-done",
      "async-done",
      "base",
      "charlike",
      "commitizen",
      "dezalgo",
      "hyperscript",
      "once",
      "standard-version",
      "verb",
      "verb-generate-readme"
    ],
    "lint": {
      "reflinks": true
    }
  }
}
